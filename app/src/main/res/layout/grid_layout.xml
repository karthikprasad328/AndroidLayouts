        android:layout_height="100dp"
        android:scaleType="fitXY"/>

    <ImageView
        android:src="@drawable/ichigo"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_gravity="fill"
        android:layout_rowSpan="2"
        android:scaleType="fitXY"/>

    <ImageView
        android:src="@drawable/ulqiorra"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"/>

    <ImageView
        android:src="@drawable/urahara"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"/>

    <ImageView
        android:src="@drawable/hollowichigo"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:layout_gravity="fill"
        android:layout_columnSpan="2"/>

    <ImageView
        android:src="@drawable/toshiro"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"/>
    <ImageView
        android:src="@drawable/yoruichi"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"/>
    <ImageView
        android:src="@drawable/soifon"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"/>
    <ImageView
        android:src="@drawable/ishida"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"/>
    <ImageView
        android:src="@drawable/ukitake"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"/>
    <ImageView
        android:src="@drawable/bleachguy"
